<!DOCTYPE html>
<html>
<head>
    <link rel='stylesheet' href='/css/layout.css' type="text/css" >
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
</head>

<body>

    <div id = "todo" >
        <h1>Todo List</h1>

        <table width = 700px>
            <thead>
                <tr id=hdr>
                    <th width = 480px>Description</td>
                    <th width = 110px>Completion Date</td>
                    <th width = 50px>Status</td>
                    <th width = 40px>delete</td>
                        <th width = 40px>edit</td>
            </tr>
            </thead> 
            <% todolist.forEach(function(todo, index) { %>
            <tr>
                <td><%= todo.description %></td>
                <td><%= todo.completiondate %></td>
                <td><%= todo.status %></td>
                <td><a href="/todo/delete/<%= index %>">âœ˜</a> </td>
                <td>
                    <a href="/todo/edit/<%= index %>" id="td_edit">Edit</a>
                </td>
            </tr>
            <% }); %>
        </table>


        <div class= "todo-input"  > 
            <form action="/todo/add/" method="post">
                <p>
                    <label for="newtodo">Todo Item:  </label>
                    <input type="text" name="newtodo" id="newtodo" autofocus value="<%= addtodo.description %>" />
                    <input type="date" name="completiondate" id="completiondate" autofocus value="<%= addtodo.completiondate %>"/>
                    <input type="text" name="status" id="status" autofocus value="<%= addtodo.status %>"/>
                    <% if (isedit) { %>
                        <input type="submit" name="addoredit" id ="addoredit" value=" Update " />
                    <% } else { %>
                        <input type="submit" name="addoredit" id ="addoredit" value="  Add   " />
                    <% } %>
                    <!-- <input type="submit" name="addoredit" id ="addoredit" value="isedit ? Edit ; Add %>" /> -->
                </p>
            </form>
        </div>
    </div>

    <div class="popup-slider"></div>
</div>

<!-- put the javascript at the end as it gives the appearance of the page loading faster -->
<script src="/socket.io/socket.io.js"></script>
