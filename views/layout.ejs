Date.daysFromNow = function(date2 ) {
    var oneday = 1000*60*60*24;
    //alert(oneday);
    var date1_ms = Date.now();
    //alert(date1_ms);
    var date2_ms = date2.getTime();
    //alert(date2_ms);
    var diff_ms = date2_ms - date1_ms;
    //alert(diff_ms);
    return Math.round(0.5 + diff_ms/oneday);
}

