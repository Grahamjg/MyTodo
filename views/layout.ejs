    var socket = io.connect('http://localhost:8080');
    socket.on('connect', function (data) {
        socket.emit('joined', document);
    })
    socket.on('messages',function(data) {
        alert(data);
    })
    socket.on('edit', function(data) {
        alert(data);
        //document.getElementById("newtodo"); 
    })
</script>
</body>
</html> 